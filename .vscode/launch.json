    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            //"mode": "test",
            "remotePath": "",
            "port": 2345,
            "host": "127.0.0.1",
            "program": "${fileDirname}",
            "env": {},
            "args": [
                "--tls-cert-file ${workspaceRoot}/certificates/certificate.pem",
                "--tls-private-key-file ${workspaceRoot}/certificates/key.pem",
                "--secure-port",
                "8443",
                "--logtostderr",
                "--v",
                "9"
            ],
            "showLog": true
        }
    ]
}
